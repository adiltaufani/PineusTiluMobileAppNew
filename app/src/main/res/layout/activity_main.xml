<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgmalem">


    <TextView
        android:id="@+id/Camp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:text="Camp"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:fontFamily="@font/poppinbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now"
        android:textColor="@color/biru"
        android:fontFamily="@font/poppinbold"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@id/Camp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>


    <ImageView
        android:id="@+id/orgkemping"
        android:layout_width="328dp"
        android:layout_height="259dp"
        android:src="@drawable/orgkemping"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.172" />

    <TextView
        android:id="@+id/qnez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Quick and Easy \nto book at Pineus Tilu \nanywhere, anytime"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinbold"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/orgkemping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="70dp"
        tools:layout_editor_absoluteX="33dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/qnez"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20sp"
        android:hint="Login"
        android:fontFamily="@font/poppinbold"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:layout_constraintEnd_toEndOf="@id/login"
        android:text="OR"
        android:textColor="@color/white"
        android:layout_marginTop="6dp"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintEnd_toStartOf="@id/OR"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/login"
        app:layout_constraintStart_toEndOf="@id/OR"
        android:layout_marginStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ig"
        android:layout_width="305sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/warnaig"
        android:hint="Sign up with Instagram"
        android:paddingLeft="59sp"
        android:paddingBottom="10sp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@id/login"
        app:layout_constraintTop_toBottomOf="@id/login" />

    <Button
        android:id="@+id/gugel"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ig"
        app:layout_constraintEnd_toEndOf="@id/ig"
        android:backgroundTint="@color/white"
        android:hint="Sign up with Google"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/logogugel"
        android:paddingLeft="26sp"/>

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gugel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Don't Have an account?"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/forgot"
        app:layout_constraintBottom_toTopOf="@id/forgot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="100dp"
        tools:layout_editor_absoluteX="79dp" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppinbold"
        android:paddingTop="5dp"
        android:text="Sign up"
        android:textColor="@color/hijau2"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgot"
        app:layout_constraintVertical_bias="0.063" />


</androidx.constraintlayout.widget.ConstraintLayout>